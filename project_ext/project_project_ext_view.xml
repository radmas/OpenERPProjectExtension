<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>        
        
		<!-- ******************* VISTA FORM ******************** -->
		
        <record id="project.edit_project_inh" model="ir.ui.view">
            <field name="name">project.project.form.inh</field>
            <field name="model">project.project</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
            	<field name="warn_manager" position="before">
            		<field name="internal" />
            	</field>
                <xpath expr="//form//notebook//page[@string='Billing']" position="after">
                	<page string="Tasks">
                		<field colspan="4" name="tasks" nolabel="1">
                			<tree>
                				<field name="id" />
                				<field name="name" />
                				<field name="project_id" />
                				<field name="user_id" />
                				<field name="project_task_category_id" />
                				<field name="project_version_id" />
                				<field name="priority" />
                				<field name="planned_hours" />
                				<field name="remaining_hours" />
                				<field name="type_id" />
                				<field name="progress" />
                				<field name="state" />
                			</tree>
                		</field>
                	</page>                    
                </xpath>        
                <xpath expr="//form//notebook//page[@string='Notes']" position="before">
                	<page string="Categories">
                		<field colspan="4" name="project_category_ids" nolabel="1">
                			<tree string="Task Categories">
			                    <field name="name" />
			                </tree>                		
                		</field>
                	</page>                    
                	<page string="Versions">
                		<field colspan="4" name="project_version_ids" nolabel="1" />
                	</page>                    
                </xpath>                
            </field>
        </record>
        
        <menuitem
            icon="terp-project" id="project_extension.menu_main_client"
            action="project.open_view_project_all"
            name="Project" sequence="10"
            groups="group_project_client"
            web_icon="images/project.png"
            web_icon_hover="images/project-hover.png"/>
            
        <menuitem id="project_extension.menu_project_management" name="Project" parent="project_extension.menu_main_client" sequence="1"/>
        
        <menuitem action="project.open_view_project_all" id="project_extension.menu_action_view_project" parent="project_extension.menu_project_management" sequence="3"/>
        <menuitem action="project.action_view_task" id="project_extension.menu_action_view_task" parent="project_extension.menu_project_management" sequence="3"/>
        <menuitem action="project_issue.project_issue_categ_act0" id="project_extension.menu_project_view_issue" parent="project_extension.menu_project_management" sequence="3" />
        
    </data>
</openerp>
